<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bmob_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.jim.demo_all.Bmob.BmobTestActivity">
<ListView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/Bmob_listView"
    >

</ListView>
    <Button
        android:text="增加数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Bmob_add"
        android:onClick="Bmob_add" />

    <Button
        android:text="删除数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Bmob_del"
        android:onClick="Bmob_del" />

    <Button
        android:text="修改数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Bmob_change"
        android:onClick="Bmob_change"

        />

    <Button
        android:text="查询数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Bmob_search"
        android:onClick="Bmob_search">

    </Button>

</LinearLayout>
